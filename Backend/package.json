{
  "name": "erp-server",
  "version": "1.0.0",
  "description": "ERP System Backend",
  "main": "dist/index.js",
  "scripts": {
    "prisma:generate": "prisma generate --schema ../prisma/schema.prisma",
    "prisma:push": "prisma db push --schema ../prisma/schema.prisma",
    "build": "tsc --noEmitOnError false",
    "postinstall": "echo 'Skipping prisma generate during build'",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node --transpile-only src/index.ts",
    "seed": "ts-node --transpile-only prisma/seed.ts"
},
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.12",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
